{
	"compileOnSave": false,
	"compilerOptions": {
		"noImplicitOverride": true,
		"allowJs": true,
		"baseUrl": "./",
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"declaration": false,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"target": "ES2022",
		"module": "ES2022",
		"lib": ["ES2022", "dom", "DOM.Iterable"],
		"paths": {
			"@js-camp/*": ["libs/*"],
			"@js-camp/angular/*": ["apps/angular/src/*"],
			"@js-camp/react/*": ["apps/react/src/*"],
			"@js-camp/vanilla/*": ["apps/vanilla/src/*"]
		}
	},
	"exclude": ["node_modules", "tmp"],
	"include": ["**/*.js", "**/*.ts"]
}
